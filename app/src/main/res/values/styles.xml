<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextCryptoInfo">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextCryptoInfo.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextCryptoInfo.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCryptoInfo.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCryptoInfo.Big.RobotoMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextCryptoInfo.Medium.RobotoRegular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextCryptoInfo.Medium.PlusJakartaSansMedium">
