<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextCryptoInfo">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextCryptoInfo.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextCryptoInfo.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCryptoInfo.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCryptoInfo.Big.RobotoMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextCryptoInfo.Medium.RobotoRegular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextCryptoInfo.Medium.PlusJakartaSansMedium">
        <item name="fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
    </style>

    <style name="TextCryptoInfo.Medium.PlusJakartaSansSemiBold">
        <item name="fontFamily">@font/plus_jakarta_sans_semibold</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_semibold</item>
    </style>

    <style name="TextCryptoInfo.Small.RobotoMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextCryptoInfo.Small.RobotoMedium.AllCaps">
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextCryptoInfo.Small.RobotoRegular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextCryptoInfo.Small.PlusJakartaSansRegular">
        <item name="fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
    </style>

    <style name="TextCryptoInfo.Small.PlusJakartaSansRegular.AllCaps">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
    </style>

    <style name="ChipTypeCurrency" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextCryptoInfo.Small.RobotoRegular</item>
        <item name="android:textColor">@drawable/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@drawable/selector_chip_background</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

</resources>